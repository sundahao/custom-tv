<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogWindowTitle">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>
    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="dialog_style" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>


    <style name="dialog_tip" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

    </style>

    <style name="dialog_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:minWidth">196dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/btn_selector_bottom</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Widget.GifView" parent="@android:style/Widget"></style>


</resources>